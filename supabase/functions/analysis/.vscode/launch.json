  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Dev Server",
      "type": "node",
      "program": "${workspaceFolder}/index.ts",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/dev.env",
      "runtimeExecutable": "/usr/bin/deno",
      "runtimeArgs": [
        "serve",
        "--inspect",
        "--allow-env",
        "--allow-net"
      ],
      "attachSimplePort": 9229
    }
  ]
}